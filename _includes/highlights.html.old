{% comment %}
Use this section to highlight key elements of your site. Some sites will only have two while others may have six to
eight.
{% endcomment %}

<section class="ficam-page-container">
	<div class="grid-container">
		<div class="partners-container grid-row">
			<div class="desktop:grid-col-12">
				<div class="home-partners-title margin-bottom-2">
					<h2 class="text-center">Information for <span class="text-no-wrap">Our Partners</span></h2>
				</div>
			</div>
		</div>
		<div class="partners-container grid-row home-partners-title" style="margin-top: 0;">
			<div class="desktop:grid-col-4 padding-2">
				<div class="grid-row">
					<div class="tablet:grid-col-3 home-partners-icon-container">
						{% asset ficampm-icon.png class="home-partners-icon" alt="Sell Products and Services" %}
					</div>
					<div class="tablet:grid-col-9 grid-col-fill tablet:padding-left-4">
						<div class="home-partners-text">
							<h3>Vendors</h3>
							<p class="margin-bottom-4">Sell your Identity, Credential, and Access Management (ICAM) products and services to the federal government.</p>
							<a href="{{site.baseurl}}/sell/" class="usa-button">Start Process</a>
						</div>
					</div>
				</div>
				<hr class="partner-divider desktop:display-none">
			</div>
			
			<div class="desktop:grid-col-4 padding-2">
				<div class="grid-row">
					<div class="tablet:grid-col-3 home-partners-icon-container">
						{% asset arch-icon.png class="usa-media-block__img" alt="Buy Products and Services" %}
					</div>
					<div class="tablet:grid-col-9 grid-col-fill tablet:padding-left-4">
						<div class="home-partners-text">
							<h3>Acquisition Professionals</h3>
							<p class="margin-bottom-4">Adopt innovative Identity, Credential, and Access Management (ICAM) products and services to meet your agencyâ€™s mission-needs.</p>
							<a href="{{site.baseurl}}/buy/" class="usa-button">Start Research</a>
						</div>
					</div>
				</div>
				<hr class="partner-divider desktop:display-none">
			</div>
			
			
			<div class="desktop:grid-col-4 padding-2">
				<div class="grid-row">
					<div class="tablet:grid-col-3 home-partners-icon-container">
						{% asset playbook-icon.png class="usa-media-block__img" alt="FICAM Governance" %}
					</div>
					<div class="tablet:grid-col-9 grid-col-fill tablet:padding-left-4">
						<div class="home-partners-text">
							<h3>Program Managers</h3>
							<p class="margin-bottom-4">Govern and operate FICAM-compliant systems and services.</p>
							<a href="{{site.baseurl}}/governance/" class="usa-button">Collaborate with Us</a>
						</div>
					</div>
				</div>
			</div>
			
		</div>
	</div>	
</section>
